<div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Daftar Produk</h2>
    <table class="table-auto w-full border-collapse border border-gray-200">
        <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <th class="py-3 px-6 text-left">ID</th>
                <th class="py-3 px-6 text-left">Nama</th>
                <th class="py-3 px-6 text-left">Gambar</th>
                <th class="py-3 px-6 text-left">Kategori</th>
                <th class="py-3 px-6 text-left">Harga</th>
                <th class="py-3 px-6 text-center">Aksi</th>
            </tr>
        </thead>
        <tbody class="text-gray-700 text-sm font-light">
            <% products.forEach(product => { %>
            <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left"><%= product.id %></td>
                <td class="py-3 px-6 text-left"><%= product.name %></td>
                <td class="py-3 px-6 text-left">
                    <img 
                        src="/uploads/<%= product.image %>" 
                        alt="<%= product.name %>" 
                        class="h-16 w-16 object-cover rounded-lg"
                    />
                </td>
                <td class="py-3 px-6 text-left"><%= product.category %></td>
                <td class="py-3 px-6 text-left">Rp <%= product.price %></td>
                <td class="py-3 px-6 text-center">
                    <button 
                        type="button" 
                        class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-lg text-sm edit-btn" 
                        data-id="<%= product.id %>" 
                        data-name="<%= product.name %>" 
                        data-image="/uploads/<%= product.image %>" 
                        data-category="<%= product.category %>" 
                        data-price="<%= product.price %>"
                    >
                        Edit
                    </button>
                    <form 
                        action="/dashboard/delete/<%= product.id %>" 
                        method="POST" 
                        class="inline-block"
                    >
                        <button 
                            type="submit" 
                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg text-sm"
                        >
                            Hapus
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
        
    </table>
